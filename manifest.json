{
  "manifest_version": 2,
  "name": "stutter",
  "description": "RSVP for browsers",
  "version": "0.0.1",
  "icons": [
    {
      "64": "icons/icon.png"
    }
  ],
  "background": {
    "scripts": [
      "/dist-bg/index.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "/dist-content/index.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "clipboardRead",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_title": "stutter"
  },
  "options_ui": {
    "page": "options/index.html"
  }
}
