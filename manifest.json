{
  "manifest_version": 2,
  "name": "stutter",
  "description": "RSVP for browsers",
  "version": "0.1.3",
  "homepage_url": "https://github.com/jamestomasino/stutter",
  "icons": {
    "48": "icons/stutter.svg",
    "64": "icons/stutter.svg",
    "96": "icons/stutter.svg"
  },
  "background": {
    "scripts": [
      "dist-bg/index.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{8cc45662-d58a-4a06-bf7b-4fcdf1d54b8d}"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "dist-content/index.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/stutter.svg"
    },
    "default_title": "Stutter"
  },
  "options_ui": {
    "page": "dist-options/index.html"
  }
}
