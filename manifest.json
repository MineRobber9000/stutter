{
  "manifest_version": 2,
  "name": "stutter",
  "description": "RSVP for browsers",
  "version": "0.0.1",
  "icons": {
    "48": "icons/stutter.svg",
    "64": "icons/stutter.svg",
    "96": "icons/stutter.svg"
  },
  "background": {
    "scripts": [
      "dist-bg/index.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "dist-content/index.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/stutter.svg"
    },
    "default_title": "Stutter"
  },
  "options_ui": {
    "page": "dist-options/index.html",
    "browser_style": true
  }
}
